ShowcaseScreen:
	name: 'Set PV data'

    Button:
    	size_hint_y: None
		height: '36dp'
		text: 'Set Temperature'
		on_release: app.set_analog_val(set_temp_input.text)

	CTextInput:
        id: set_temp_input
        size_hint_y: None
        height: '36dp'
        multiline: False
        text: 'PV value'

    Button:
        size_hint_y: None
        height: '36dp'
        text: 'Read Temperature'
        on_release: temp_label.text = app.get_analog_val()

    Label:
        id: temp_label
        text: 'Temperature goes here...'


