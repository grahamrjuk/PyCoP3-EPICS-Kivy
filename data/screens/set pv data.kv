<CTextInput@TextInput>
    id: 'set_temp_input'
    on_focus:
        screen = self.parent.parent.parent.parent
        if screen.parent: screen.focused = self

<SetAnalogueWidget>:
    CTextInput:
        id: 'set_temp_input'
        size_hint_y: None
        height: '36dp'
        multiline: False
        text: 'PV value'

    Button:
    	size_hint_y: None
		height: '36dp'
		text: 'Set Temperature'
		on_release: app.set_analogue_val(set_temp_input.text)